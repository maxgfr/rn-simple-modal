{
  "extends": "@tsconfig/react-native/tsconfig.json" /* Recommended React Native TSConfig base */,
  "include": ["src/**/*", "stories", "__tests__"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "compilerOptions": {
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "outDir": "./dist",
    "noEmit": false /* Do not emit outputs. */,
    "declaration": true
  }
}
